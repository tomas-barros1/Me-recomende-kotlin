<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#98C2E3"
    android:orientation="vertical"
    tools:context=".ProfileAndChooseActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle"
        android:backgroundTint="#fff"
        android:contentDescription="Foto de perfil"
        android:src="@drawable/baseline_person_24" />

    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded"
        android:text="email@exemplo.com"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#000000" />

    <Button
        android:id="@+id/logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#5A5A5A"
        android:text="Sair da conta"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Me recomende um(a):"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/selectMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="#fff"
            android:contentDescription="Selecionar filme"
            android:src="@drawable/movie_open" />

        <ImageButton
            android:id="@+id/selectBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@id/selectMovie"
            android:background="#fff"
            android:contentDescription="Selecionar livro"
            android:src="@drawable/lock" />

        <ImageButton
            android:id="@+id/selectShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectMovie"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="#fff"
            android:contentDescription="Selecionar sÃ©rie"
            android:src="@drawable/lock" />

        <ImageButton
            android:id="@+id/selectCartoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectBook"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@id/selectShow"
            android:background="#fff"
            android:contentDescription="Selecionar desenho"
            android:src="@drawable/lock" />

    </RelativeLayout>
</LinearLayout>
